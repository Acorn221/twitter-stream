<div class="center">
	<a href="" class="button">Refresh Tweet Database</a>
</div>

<ul id="filterButtons">
	{% set filter_buttons = [ 
		('all', 'All Tweets'),
		('good', 'Authorized'),
		('bad', 'Black Listed') ] 
	-%} 
	{% for filter, text in filter_buttons %}
	<li {% if filter==filter_type %} class="active" {% endif%}>
		<a class="button" href="/panel?filter={{filter}}">{{text}}</a>
	</li>
	{% endfor %}
</ul>

<div id="tweets">
	{% for tweet in tweets %}
	<div class="tweets">{{tweet['TWEET_TEXT']}}</div>
	{% endfor %}
</div>

{% endblock %}
